#include <msp430.h>
#include <libTimer.h>
#include "lcdutils.h"
#include "lcddraw.h"

#define S1 BIT1
#define S2 BIT2
#define S3 BIT3
#define s4 BIT4

#define SWITCHES (S1 | S2 | S3 | S4)


char redrawScreen = 0;

void wdt_c_handler(){
  redrawScreen = 1;
}

void main(){
  configureClocks();
  lcd_init();
  clearScreen(COLOR_BLUE);
  enableWDTInterrupts();
  or_sr(0x8);
  
  u_char colorIndex = 0;

  u_int colors[] = {COLOR_RED, COLOR_GREEN, COLOR_BLUE, COLOR_ORANGE};

  while(1){
    if(redrawScreen){
      redrawScreen = 0;

      clearScreen(COLOR_BLACK);
      drawString5x7(47,60, "oontz", colors[colorIndex], COLOR_BLACK);

      colorIndex = (colorIndex +1) % 4;
    }
    
    or_sr(0x10);
  }
  
}
